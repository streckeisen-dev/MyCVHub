{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client", "cypress"],
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "outDir": "./dist"
  },
  "include": ["src", "cypress/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
